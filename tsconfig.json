{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "types": ["bun-types"],
    "jsx": "react-jsx",
    "paths": {
      "@bicamrl/shared": ["./packages/shared/src/index.ts"],
      "@bicamrl/shared/*": ["./packages/shared/src/*"]
    }
  },
  "references": [
    { "path": "./packages/server" },
    { "path": "./packages/shared" }
  ]
}