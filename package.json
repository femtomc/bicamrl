{
  "name": "bicamrl",
  "version": "0.1.0",
  "description": "Bidirectional Context-Aware Memory and Reasoning Layer",
  "type": "module",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "concurrently -k \"bun run dev:server\" \"sleep 2 && bun run dev:gui\"",
    "dev:server": "cd packages/server && bun run dev",
    "dev:gui": "cd packages/editor/gui && cargo run",
    "build": "bun run build:server && bun run build:gui",
    "build:server": "cd packages/server && bun run build",
    "build:gui": "cd packages/editor/gui && cargo build --release",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist packages/editor/*/target",
    "test": "bun run test:all",
    "test:all": "./scripts/test/run-all-tests.sh",
    "test:ci": "./scripts/test/run-ci-tests.sh",
    "test:server": "cd packages/server && bun test",
    "test:integration": "./scripts/test/run-all-tests.sh",
    "test:performance": "RUN_PERF_TESTS=true ./scripts/test/run-all-tests.sh",
    "benchmark": "cd packages/editor/gui && bun run tests/performance_benchmark.ts",
    "benchmark:long": "cd packages/editor/gui && bun run tests/performance_benchmark.ts 60000",
    "test:cache": "cd packages/editor/gui && bun test tests/cache.test.ts",
    "test:sse": "cd packages/editor/gui && bun test tests/sse.integration.test.ts",
    "test:load": "cd packages/editor/gui && bun run tests/load.test.ts",
    "test:load:scaling": "cd packages/editor/gui && bun run tests/load.test.ts scaling",
    "typecheck": "bun run typecheck:ts && bun run typecheck:rust",
    "typecheck:ts": "cd packages/server && bun run typecheck",
    "typecheck:rust": "cd packages/editor/gui && cargo check",
    "lint": "bun run lint:ts && bun run lint:rust",
    "lint:ts": "cd packages/server && bun run lint",
    "lint:rust": "cd packages/editor/gui && cargo clippy -- -D warnings",
    "lint:fix": "bun run lint:fix:ts && bun run lint:fix:rust",
    "lint:fix:ts": "cd packages/server && bun run lint:fix",
    "lint:fix:rust": "cd packages/editor/gui && cargo clippy --fix --allow-dirty --allow-staged",
    "check": "bun run typecheck && bun run lint",
    "check:fast": "concurrently \"bun run typecheck:ts\" \"bun run typecheck:rust\" \"bun run lint:ts\" \"bun run lint:rust\"",
    "fmt": "bun run fmt:ts && bun run fmt:rust",
    "fmt:ts": "cd packages/server && prettier --write \"src/**/*.ts\"",
    "fmt:rust": "cd packages/editor/gui && cargo fmt",
    "fmt:check": "bun run fmt:check:ts && bun run fmt:check:rust",
    "fmt:check:ts": "cd packages/server && prettier --check \"src/**/*.ts\"",
    "fmt:check:rust": "cd packages/editor/gui && cargo fmt -- --check",
    "pre-commit": "bun run check:fast && bun run fmt:check",
    "test:send-message": "./scripts/test/send-message.sh",
    "test:wake": "cd packages/server && bun run test-wake.ts",
    "test:worktree": "cd packages/server && bun run test-worktree.ts",
    "test:monitor": "./scripts/test/monitor-interactions.sh",
    "test:approve": "./scripts/test/approve-permission.sh",
    "test:deny": "./scripts/test/deny-permission.sh",
    "test:permission-flow": "./scripts/test/test-tool-permission-flow.sh",
    "test:worktree-dialog": "./scripts/test-worktree-dialog.sh",
    "test:gui-worktree": "./scripts/test-gui-worktree-features.sh",
    "bicky": "bun run dev",
    "server": "bun run dev:server",
    "gui": "bun run dev:gui",
    "kill": "lsof -ti:3456 | xargs kill -9 2>/dev/null || true",
    "clean:all": "bun run kill && bun run clean"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.2.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "trustedDependencies": [
    "@anthropic-ai/claude-code"
  ]
}